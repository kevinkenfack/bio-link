{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",  // Indique que vous utilisez React avec JSX
    "noEmit": false  // Assurez-vous que TypeScript génère des fichiers JS
  },
  "include": ["src"],  // Indique les dossiers ou fichiers à inclure dans la compilation
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
